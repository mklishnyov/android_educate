<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <style name="TextStyle.Header" parent="TextStyle">
        <item name="android:textColor">@color/text_color_header</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Night" parent="TextStyle">
        <item name="android:textColor">@color/text_color_night</item>
    </style>

    <style name="TextStyle.Header.Night" parent="TextStyle.Header">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>